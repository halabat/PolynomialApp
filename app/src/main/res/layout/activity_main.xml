<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- כותרת האפליקציה -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="אפליקציית פולינומים"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp" />

    <!-- הזנת דרגת הפולינום -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הכנס את דרגת הפולינום:"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/degreeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:hint="לדוגמה: 3"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- הזנת המקדמים -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="הכנס את המקדמים (מופרדים בפסיק):"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/coefficientsInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:hint="לדוגמה: 7,3,6,-4"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="8dp" />

    <!-- כפתור שמירה -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שמור פולינום"
        android:layout_gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <!-- הצגת הפולינום -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="פולינום:"
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/polynomialOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="f(x) = "
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:background="@drawable/textview_border" />



</LinearLayout>